{
  "name": "mmtcli",
  "version": "0.1.0",
  "description": "Multimeter CLI test runner",
  "type": "module",
  "private": false,
  "bin": {
  "testlight": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "dev": "tsx src/cli.ts --help",
    "clean": "rimraf dist",
    "pkg": "rimraf dist-cjs && npm run build:cjs && pkg dist-cjs/cli.js --targets node18-macos-x64,node18-linux-x64,node18-win-x64 --output dist/bin/testlight",
    "test": "echo \"(no tests yet)\""
  },
  "pkg": {
    "scripts": [
      "dist-cjs/**/*.js",
  "node_modules/axios/dist/node/axios.cjs",
      "node_modules/mmt-core/dist/**/*.js"
    ],
    "assets": [
  "node_modules/axios/dist/**",
  "node_modules/axios/lib/**",
  "node_modules/axios/dist/node/axios.cjs",
      "node_modules/ws/**/*.js",
      "node_modules/mmt-core/dist/**",
      "node_modules/mmt-core/package.json"
    ]
  },
  "dependencies": {
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "mmt-core": "file:../core",
    "axios": "^1.10.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2"
  }
}
