{
  "name": "multimeter",
  "publisher": "mshobeyri",
  "displayName": "Multimeter",
  "description": "API test tools",
  "version": "0.14.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mshobeyri/multimeter.git"
  },
  "icon": "res/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mmt"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mmt",
        "extensions": [
          ".mmt"
        ],
        "aliases": [
          "MMT",
          "Multimeter Test"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "res/icon.png",
          "dark": "res/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "mmt",
        "scopeName": "source.mmt",
        "path": "./syntaxes/mmt.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Multimeter",
      "properties": {
        "multimeter.enableCertificateValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable SSL certificate validation for HTTPS requests"
        },
        "multimeter.certificates.ca": {
          "type": "object",
          "default": {
            "enabled": false,
            "certPath": ""
          },
          "description": "CA Certificate configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable CA certificate"
            },
            "certPath": {
              "type": "string",
              "description": "Path to CA certificate file"
            }
          }
        },
        "multimeter.certificates.clients": {
          "type": "array",
          "default": [],
          "description": "Client certificates configuration",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier"
              },
              "name": {
                "type": "string",
                "description": "Certificate name/label"
              },
              "host": {
                "type": "string",
                "description": "Host pattern (e.g., *.example.com)"
              },
              "certPath": {
                "type": "string",
                "description": "Path to certificate file"
              },
              "keyPath": {
                "type": "string",
                "description": "Path to private key file"
              },
              "passphrase": {
                "type": "string",
                "description": "Private key passphrase"
              },
              "enabled": {
                "type": "boolean",
                "description": "Enable this certificate"
              }
            }
          }
        },
        "multimeter.network.timeout": {
          "type": "number",
          "default": 30000,
          "description": "HTTP request timeout in milliseconds",
          "minimum": 1000,
          "maximum": 300000
        },
        "multimeter.body.auto.format": {
          "type": "boolean",
          "default": false,
          "description": "Automatically format the body of the responses"
        }
      }
    },
    "customEditors": [
      {
        "viewType": "mmt.editor",
        "displayName": "MMT Editor",
        "selector": [
          {
            "filenamePattern": "file:/**/*.mmt"
          }
        ],
        "icon": {
          "light": "res/activity.png",
          "dark": "res/activity.png"
        }
      }
    ],
    "commands": [
      {
        "command": "multimeter.mmt.show",
        "title": "Show MMT Preview",
        "category": "Preview",
        "icon": {
          "light": "res/activity.png",
          "dark": "res/activity.png"
        }
      },
      {
        "command": "multimeter.mmt.show.yaml",
        "title": "Hide UI Preview",
        "icon": "$(layout-sidebar-right-dock)"
      },
      {
        "command": "multimeter.mmt.show.ui",
        "title": "Hide YAML Preview",
        "icon": "$(layout-sidebar-left-dock)"
      },
      {
        "command": "multimeter.mmt.show.full",
        "title": "Show Full Preview",
        "icon": "$(layout-centered)"
      },
      {
        "command": "multimeter.mmt.show.as.text",
        "title": "Open as MMT Text Editor",
        "category": "MMT",
        "icon": "$(code-oss)"
      },
      {
        "command": "multimeter.history.clear",
        "title": "Clear History",
        "icon": "$(clear-all)"
      },
      {
        "command": "multimeter.setting.open",
        "title": "Open Multimeter Settings",
        "category": "Multimeter"
      },
      {
        "command": "multimeter.environment.focus",
        "title": "Focus Environment Variables",
        "category": "Multimeter"
      },
      {
        "command": "multimeter.environment.clear",
        "title": "Clear Environment Variables",
        "icon": "$(clear-all)"
      },
      {
        "command": "multimeter.environment.refresh",
        "title": "Refresh Environment Variables",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multimeter",
          "title": "Multimeter",
          "icon": "res/activity.png"
        }
      ],
      "panel": [
        {
          "id": "history-container",
          "title": "Multimeter History",
          "icon": "res/activity.png"
        }
      ]
    },
    "views": {
      "multimeter": [
        {
          "id": "multimeter.convertor",
          "name": "Convertor",
          "icon": "res/activity.png",
          "type": "webview"
        },
        {
          "id": "multimeter.mock.server",
          "name": "Mock Server",
          "icon": "res/activity.png",
          "type": "webview"
        },
        {
          "id": "multimeter.certificates",
          "name": "Certificates",
          "icon": "res/activity.png",
          "type": "webview"
        },
        {
          "id": "multimeter.environment",
          "name": "Environment Variables",
          "icon": "res/activity.png",
          "type": "webview"
        }
      ],
      "history-container": [
        {
          "id": "multimeter.history",
          "name": "History",
          "icon": "res/activity.png",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "multimeter.history.clear",
          "when": "view == multimeter.history",
          "group": "navigation"
        },
        {
          "command": "multimeter.environment.refresh",
          "when": "view == multimeter.environment",
          "group": "navigation"
        },
        {
          "command": "multimeter.environment.clear",
          "when": "view == multimeter.environment",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "multimeter.mmt.show.ui",
          "when": "activeCustomEditorId == mmt.editor",
          "group": "navigation"
        },
        {
          "command": "multimeter.mmt.show.yaml",
          "when": "activeCustomEditorId == mmt.editor",
          "group": "navigation"
        },
        {
          "command": "multimeter.mmt.show.full",
          "when": "activeCustomEditorId == mmt.editor",
          "group": "navigation"
        },
        {
          "command": "multimeter.mmt.show.as.text",
          "when": "activeCustomEditorId == mmt.editor",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "multimeter.mmt.show.as.text",
          "when": "resourceExtname == .mmt",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "multimeter.mmt.show.as.text",
          "when": "resourceExtname == .mmt"
        }
      ]
    }
  },
  "keywords": [
    "test",
    "testing",
    "postman",
    "jmeter",
    "neoload",
    "smoke test",
    "performance test",
    "api test",
    "api testing",
    "api",
    "api testing tool",
    "api testing tools",
    "regression test",
    "regression testing",
    "regression",
    "regression test tool",
    "regression testing tool",
    "robot framework"
  ],
  "license": "MIT",
  "scripts": {
    "buildview": "npm run build --prefix mmtview",
    "deploy": "vsce package",
    "install-package": "code --install-extension multimeter-0.14.0.vsix",
    "vscode:prepublish": "npm run package",
    "compile": "npm run buildview && npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.70.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "buffer": "^6.0.3",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "xml-js": "^1.6.11",
    "yaml": "^2.8.0"
  }
}