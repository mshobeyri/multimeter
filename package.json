{
  "name": "multimeter",
  "publisher": "mshobeyri",  
  "displayName": "Multimeter",
  "description": "API test tools",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mshobeyri/multimeter.git"
  },
  "icon": "res/icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mmt"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mmt",
        "extensions": [
          ".mmt"
        ],
        "aliases": [
          "MMT"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "mmt.preview",
        "displayName": "MMT Preview",
        "selector": [
          {
            "filenamePattern": "*.mmt"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.showMmtPreview",
        "title": "Show MMT Preview",
        "category": "Preview",
        "icon": {
          "light": "res/icon.png",
          "dark": "res/icon.png"
        }
      }
    ],
    "iconThemes": [
      {
        "id": "mmt-icons",
        "label": "MMT Icons",
        "path": "./fileicons/mmt-icon-theme.json"
      }
    ],
    "views": {
      "multimeterViewContainer": [
        {
          "id": "multimeterView",
          "name": "Multimeter Panel"
        }
      ]
    }
  },
  "scripts": {
    "buildview": "npm run build --prefix mmtview",
    "deploy": "nvsce package",
    "install": "code --install-extension multimeter-0.1.0.vsix",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "buffer": "^6.0.3",
    "xml-js": "^1.6.11"
  }
}
